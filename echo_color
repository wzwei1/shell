# 字体颜色：30m-37mtr 黑、红、绿、黄、蓝、紫、青、白
str="字体颜色"
echo -e "\033[30m ${str} \033[0m"  #黑色字
echo -e "\033[31m ${str} \033[0m"  #红色字
echo -e "\033[32m ${str} \033[0m"  #绿色字
echo -e "\033[33m ${str} \033[0m"  #黄色字
echo -e "\033[34m ${str} \033[0m"  #蓝色字
echo -e "\033[35m ${str} \033[0m"  #紫色字
echo -e "\033[36m ${str} \033[0m"  #天蓝字
echo -e "\033[37m ${str} \033[0m"  #白色字
